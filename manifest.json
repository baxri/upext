{
  "manifest_version": 2,

  "name": "UniPAY",
  "description": "UniPAY chrome extension, for manaing som features bankout",
  "version": "1.0",
  "icons": { 
    "48": "icon48.png"
  },            
  "browser_action": {    
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://www.matarebeli.ge/"
  ],
  "background": {
    "scripts": [ "background.js" ],
    "persistent": true
  },
  "content_scripts": [
    {      
      "matches": ["https://upconsole.unipay.com/*", "http://www.matarebeli.ge/*"],
      "js": ["jquery.js", "contentscript.js"],
      "run_at" : "document_end"
    }
  ]
}